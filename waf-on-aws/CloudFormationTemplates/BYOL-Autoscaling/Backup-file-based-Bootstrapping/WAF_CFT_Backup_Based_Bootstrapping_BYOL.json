          "default": "Clustering S3 Bucket"
    },
    "BootstrappingS3Bucket" : {
          "default": "Bootstrapping S3 Bucket"
    },
    "CudaBackupSubDir" : {
          "default" : "Bootstrapping Sub Directory"
    },
    "BackupFileName" : {
          "default" : "Backup File Name"
    },
        "TimeZone" : {
          "default" : "Time Zone"
        },
    "NtpServers" : {
          "default" : "NTP Servers"
        }
